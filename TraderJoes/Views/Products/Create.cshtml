@{
  Layout = "_Layout";
}

@model TraderJoes.Models.Product

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.Label("Select department")
  @Html.DropDownList("DepartmentId")

  @Html.Label("Add due date")
  @Html.TextBoxFor(model => model.DueDate, new { type = "date" })

  <input type="submit" value="Add new product" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all products", "Index")</p>