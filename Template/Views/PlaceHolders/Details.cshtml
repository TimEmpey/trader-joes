@{
  Layout = "_Layout";
}

@model Template.Models.PlaceHolder;

<h2>PlaceHolder Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This placeHolder does not contain any placeHolder2s</p>
}
else
{
  <h4>PlaceHolder2s the placeHolder contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.PlaceHolder2.Description</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to placeHolders", "Index")</p>
<p>@Html.ActionLink("Edit PlaceHolder", "Edit", new { id = Model.PlaceHolderId })</p>
<p>@Html.ActionLink("Delete PlaceHolder", "Delete", new { id = Model.PlaceHolderId })</p>